<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/StyleSheet.css" />
</head>
<body class="back">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Gerenciador De Estoque</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="~/management/index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/categories/allcategories">Categorias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/products/allproducts">Produtos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/salesRecord/allsales">Vendas</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody() 
    </div>
    @{
        var scriptSrc = "https://cdn.jsdelivr.net/npm/%40popperjs/core%402.9.2/dist/umd/popper.min.js";
    }
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="@scriptSrc"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
